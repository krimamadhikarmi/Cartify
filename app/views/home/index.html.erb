<div class="bg-gray-300 text-center py-20 mt-16">
  <h1 class="text-3xl font-semibold whitespace-nowrap font-pacifico">Welcome to Cartify</h1>
</div>

<div class="container mx-auto grid grid-cols-4 gap-4 mt-6 mb-4">
  <% @main_categories.each do |category| %>
    <div class="category-card p-4 bg-white shadow-md">
      <%= link_to category_path(category) do %>
        <div class="aspect-w-1 aspect-h-1 mb-2">
          <%= category.image.present? ? image_tag(category.image, class: "object-cover w-full h-full rounded-md") : image_tag("http://via.placeholder.com/512", class: "object-cover w-full h-full rounded-md") %>
        </div>
        <p class="text-center text-sm font-medium text-gray-700 truncate"><%= category.name %></p>
      <% end %>
    </div>
  <% end %>
</div>



